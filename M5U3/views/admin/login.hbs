<link rel="stylesheet" href="/stylesheets/admin.css">

<div class="container-fluid" style="margin-top: 150px;">
  <div class="row"
    style=" height: 250px; width: 300px; align-items: center; display: block; margin-left: auto; margin-right: auto; width: 30%;">
    <div class="col">
      <form action="/admin/login" method="post">
        <div class="form-group">
          <label for="usuario">Usuario</label>
          <input type="text" class="form-control" id="usuario" aria-describedby="emailHelp" name="usuario">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password">
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Enviar</button>
      </form>
    </div>
    {{#if error}}
    <p style="margin-top: 10px;">Usuario y/o contrase√±a incorrectos</p>
    {{/if}}
  </div>
</div>