<link rel="stylesheet" href="/stylesheets/admin.css">
<div class="container" style="margin-top: 20px;">
    {{!-- inicio fila 1 --}}
    <div class="row">
        <div class="col">
            <p class="text-center">
                <span>Hola {{usuario}}!!</span>

            </p>
        </div>
        <div class="col">
            <p class="text-center">
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i
                        class="fasfa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1 --}}
    {{!-- inicio fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h2>Listado de novedades</h2>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>
    {{!-- fin fila 2 --}}
    {{!-- inicio fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class=" text-right">Acciones</th>
                    </tr>
                </thead>
                <thead>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" title="editar" class="btn btn-secondary">
                                <i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="eliminar" class="btn btn-secondary">
                                <i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </thead>
            </table>
        </div>
    {{!-- fin fila 3 --}}
    </div>
</div>